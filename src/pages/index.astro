---
import Layout from '../layouts/Layout.astro';
import Git from '../components/Git.astro';
import Header from "../components/Header.astro";
import GitMarkdown from "./git.md";
---

<Layout title="The Valley of Code : Git">
	<main>
	  <Git />
	  <div class = "container">
	  <Header  top = "Git"  text = "We use Git to save our code in snapshots that we can go back to whenever we want. And it lets people work together on code."/>
	  <div class = "wrap">
	  <GitMarkdown />
	  </div>
	  </div>
	</main>
</Layout>

<style>
  main{
	display : flex;
	flex-direction : row;
  }
  .container{
	width : 60%;
	display : flex;
	flex-direction : column;
	margin-left : auto;
  }
  .wrap{
	color : white;
	font-size: 16px;
	line-height : 30px;
	 margin-right : 20px;
	 box-sizing : border-box;
  }
  @media (max-width: 768px) {
    main {
      display : flex;
      justify-content : center;
      align-items : center;
      flex-direction: column;

    }
    .container {
    width: 600px;
    display: flex;
    flex-direction: column;
    margin-left: auto;
    align-items: center;
    justify-content: center;
    padding: 15px;
}
     
  }
	 
</style>
